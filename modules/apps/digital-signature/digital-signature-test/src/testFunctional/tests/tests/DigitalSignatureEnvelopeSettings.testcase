@component-name = "portal-solutions"
definition {

	property portal.release = "true";
	property portal.upstream = "true";
	property testray.main.component.name = "Digital Signature";

	setUp {
		TestCase.setUpPortalInstance();

		User.firstLoginUI();

		ApplicationsMenu.gotoPortlet(
			category = "Configuration",
			panel = "Control Panel",
			portlet = "Instance Settings");

		SystemSettings.gotoConfiguration(
			configurationCategory = "Digital Signature",
			configurationName = "Digital Signature Configuration",
			configurationScope = "Virtual Instance Scope");

		FormFields.enableCheckbox(fieldName = "enabled");
	}

	tearDown {
		var testPortalInstance = PropsUtil.get("test.portal.instance");

		if ("${testPortalInstance}" == "true") {
			PortalInstances.tearDownCP();
		}
		else {
			User.logoutPG();
		}
	}

	@description = "This is a test for LPS-XXX. Verify if Envelope Name field is required"
	@priority = "4"
	test EnvelopeNameIsRequired {
		ProductMenu.gotoPortlet(
			category = "Content & Data",
			portlet = "Digital Signature");

        LexiconEntry.gotoAdd();

        AssertElementPresent(fieldLabel="Envelope Name", locator1 = "FormViewBuilder#FIELD_LABEL_REQUIRED");
    }

	@description = "This is a test for LPS-XXX. Verify if Recipient Full Name field is required"
	@priority = "4"
    test RecipentNameIsRequired {
		ProductMenu.gotoPortlet(
			category = "Content & Data",
			portlet = "Digital Signature");

        LexiconEntry.gotoAdd();

        AssertElementPresent(fieldLabel="Recipient Full Name", locator1 = "FormViewBuilder#FIELD_LABEL_REQUIRED");
    }

	@description = "This is a test for LPS-XXX. Verify if Recipient Email field is required"
	@priority = "4"
    test RecipentEmailIsRequired {
		ProductMenu.gotoPortlet(
			category = "Content & Data",
			portlet = "Digital Signature");

        LexiconEntry.gotoAdd();

        AssertElementPresent(fieldLabel="Recipient Email", locator1 = "FormViewBuilder#FIELD_LABEL_REQUIRED");
    }

	@description = "This is a test for LPS-XXX. Verify if Email Subject field is required"
	@priority = "4"
    test EmailSubjectIsRequired {
		ProductMenu.gotoPortlet(
			category = "Content & Data",
			portlet = "Digital Signature");

        LexiconEntry.gotoAdd();

        AssertElementPresent(fieldLabel="Email Subject", locator1 = "FormViewBuilder#FIELD_LABEL_REQUIRED");
    }

	@description = "This is a test for LPS-XXX. Verify if its possible only maximum of 10 recipients can be added"
	@priority = "4"
	test CanAddOnly10Recipients {
		ProductMenu.gotoPortlet(
			category = "Content & Data",
			portlet = "Digital Signature");

        LexiconEntry.gotoAdd();

		for (var i : list "1,2,3,4,5,6,7,8,9") {
			AssertClick(
			key_text = "Add Recipient",
			locator1 = "Button#ANY_WITH_SPAN",
			value1 = "Add Recipient");
		}

		AssertElementNotPresent(
			key_text = "Add Recipient",
			locator1 = "Button#ANY_WITH_SPAN");
	}

	@description = "This is a test for LPS-XXX. Verify if its possible delete any additional recipients"
	@priority = "4"
	test CanDeleteRecipients {
		ProductMenu.gotoPortlet(
			category = "Content & Data",
			portlet = "Digital Signature");

        LexiconEntry.gotoAdd();

		AssertClick(
			key_text = "Add Recipient",
			locator1 = "Button#ANY_WITH_SPAN",
			value1 = "Add Recipient");

		Click(locator1 = "Button#REMOVE_IMAGE_LAST");

		AssertElementPresent(
			locator1 = "Button#TRASH_DISABLED");
	}

	@description = "This is a test for LPS-XXX. Verify if Success Message appear"
	@priority = "3"
	test CanViewSuccessMessage {
		DigitalSignature.createEnvelope(
			dmDocumentFile = "Alice's Adventures in Wonderland.pdf",
			envelopeName = "Test Envelope Name",
			recipientFullName= "Recipient Full Name",
			emailSubject = "Email Subject",
			recipientEmail = "test@liferay.com",
			emailMessage = "Email Message");

		Alert.viewSuccessMessageText(successMessage="Your envelope was created successfully.");
	}

	@description = "This is a test for LPS-XXX. Verify if Error message appear"
	@priority = "3"
	test CanViewErrorMessage {
		DigitalSignature.createEnvelope(
			dmDocumentFile = "Alice's Adventures in Wonderland.pdf",
			envelopeName = "Test Envelope Name",
			recipientFullName= "Recipient Full Name",
			emailSubject = "Email Subject",
			recipientEmail = "test@liferay",
			emailMessage = "Email Message");

		Alert.viewErrorMessage(errorMessage = "Error Message here");
	}

}